<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="nav">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="columnTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commentArticleTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#3E3A39</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commentArticleContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#595757</item>
    </style>

    <style name="commentArticleTime">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#8E8E8E</item>
    </style>

    <style name="headLineTitle">
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headLineContent">
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inlineCategoryTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">145sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inlineStoryTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inlineStorySmallTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="detail_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="detail_time">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="detail_author">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="mydialog">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- <item name="android:windowIsFloating">true</item> -->
        <!-- <item name="android:windowIsTranslucent">false</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
    </style>

    <style name="categoryDesc">
        <item name="android:textColor">#A67C52</item>
        <item name="android:textSize">53sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

</resources>